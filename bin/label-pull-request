#!/bin/bash

if [ $# -ne 2 ]; then
  echo "Usage: $0 <pull_request_number> <label_string>"
  exit 1
fi

# Take pull request number and label string as arguments
PULL_REQUEST_NUMBER="$1"
LABEL="$2"

# Apply label to pull request
gh pr edit $PULL_REQUEST_NUMBER --add-label="$LABEL"
# echo "Adding label $LABEL to pull request $PULL_REQUEST_NUMBER"
